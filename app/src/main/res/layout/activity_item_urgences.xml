<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    tools:context=".item_urgences"
    android:id="@+id/item_urg"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_urg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_copte_user" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nom_urg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Nom de l'urgence"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tel_urg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Mobile" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_appel"
        android:layout_width="51dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_vert"
        android:drawableLeft="@drawable/ic_appel"/>
</LinearLayout>

</androidx.cardview.widget.CardView>


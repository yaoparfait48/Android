<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_even"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    tools:context=".item_event">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_event"
            android:layout_width="150dp"
            android:layout_height="105dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/rectangle_22" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:id="@+id/titre_recy_even"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titre"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descript_recy_even"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description de l'Ã©lement selectionner"
                    android:textStyle="italic" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_even_itin"
                android:layout_width="47dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|right"
                android:layout_weight="2"
                android:background="@drawable/btn_vert"
                android:drawableLeft="@drawable/ic_localisation_blanc"
                android:textColor="#FFFFFF"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    tools:context=".item_rencontre"
    android:id="@+id/item_renc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_stade_renc"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:padding="5dp"
            app:srcCompat="@drawable/rectangle_22" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="2dp">

            <TextView
                android:id="@+id/titre_recy_renc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre"
                android:textColor="#105E13"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descript_recy_renc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description de l'Ã©lement selectionner"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>